# ProductDescriptions.io Environment Configuration
# Copy this file to .env and fill in your actual values

# ===================
# Core Configuration
# ===================
NODE_ENV=production
APP_URL=https://productdescriptions.io

# ===================
# AI API Keys
# ===================
# Google Gemini API (for product descriptions)
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API (for image analysis - optional)
OPENAI_API_KEY=your_openai_api_key_here

# ===================
# Shopify Integration
# ===================
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret_here

# ===================
# Stripe Configuration
# ===================
# Test Mode Keys (for development)
STRIPE_TEST_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_TEST_SECRET_KEY=sk_test_your_key_here

# Production Keys (for live payments)
STRIPE_LIVE_PUBLISHABLE_KEY=pk_live_your_key_here
STRIPE_LIVE_SECRET_KEY=sk_live_your_key_here

# Webhook Endpoint Secret
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Price IDs for subscription plans
STRIPE_PRICE_FREE=price_free_plan_id
STRIPE_PRICE_STARTER=price_starter_plan_id
STRIPE_PRICE_PROFESSIONAL=price_professional_plan_id
STRIPE_PRICE_ENTERPRISE=price_enterprise_plan_id

# Video upsell price IDs
STRIPE_PRICE_VIDEO_SINGLE=price_video_single_id
STRIPE_PRICE_VIDEO_PACK=price_video_pack_id

# ===================
# Database (Optional - for production)
# ===================
DATABASE_URL=postgresql://user:password@localhost:5432/productdescriptions

# ===================
# Redis (Optional - for rate limiting in production)
# ===================
REDIS_URL=redis://localhost:6379

# ===================
# Analytics
# ===================
POSTHOG_API_KEY=phc_your_posthog_key_here
POSTHOG_HOST=https://app.posthog.com

# ===================
# Email (for notifications)
# ===================
SENDGRID_API_KEY=your_sendgrid_api_key_here
SUPPORT_EMAIL=support@productdescriptions.io
NOTIFICATION_EMAIL=admin@productdescriptions.io

# ===================
# Security
# ===================
JWT_SECRET=your_random_jwt_secret_here_at_least_32_chars
ENCRYPTION_KEY=your_random_encryption_key_here_32_chars

# ===================
# Rate Limiting
# ===================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ===================
# Feature Flags
# ===================
ENABLE_VIDEO_GENERATION=true
ENABLE_BULK_UPLOAD=true
ENABLE_SHOPIFY_INTEGRATION=true
ENABLE_API_ACCESS=true